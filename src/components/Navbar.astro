---
import { Image } from "astro:assets";
import logoGitHub from "../assets/icons/github.svg";
import logoLinkedin from "../assets/iconLinkedin.png";
---

<div class="flex flex-col fixed z-50">
    <div
        class="w-screen p-3 grid grid-cols-3 items-center bg-white dark:bg-zinc-900 dark:text-white"
    >
        <h1 class="font-bold text-2xl">KZ.</h1>
        <div class="flex gap-2 justify-center">
            <a
                class="flex cursor-pointer group hover:bg-black dark:hover:bg-white p-2 rounded-md translate-x-2 hover:translate-x-0 transition duration-300"
                href="/f-portifolio/"
            >
                <span
                    class="material-icons transition duration-300 group-hover:text-white dark:group-hover:text-black"
                    >home</span
                >
                <h1
                    class="text-white overflow-hidden whitespace-nowrap max-w-0 opacity-0 group-hover:max-w-xs group-hover:opacity-100 transition-all duration-300 ml-2 group-hover:mr-2 dark:group-hover:text-black"
                >
                    Home
                </h1>
            </a>
            <a
                class="flex cursor-pointer group hover:bg-black p-2 rounded-md translate-x-2 hover:translate-x-0 transition duration-300 dark:hover:bg-white"
                href="/f-portifolio/sobre"
            >
                <span
                    class="material-icons transition duration-300 group-hover:text-white dark:group-hover:text-black"
                    >info</span
                >
                <h1
                    class="text-white overflow-hidden whitespace-nowrap max-w-0 opacity-0 group-hover:max-w-xs group-hover:opacity-100 transition-all duration-300 ml-2 group-hover:mr-2 dark:group-hover:text-black"
                >
                    Sobre
                </h1>
            </a>
            <a
                class="flex cursor-pointer group hover:bg-black p-2 rounded-md translate-x-2 hover:translate-x-0 transition duration-300 dark:hover:bg-white"
                href="/f-portifolio/material"
            >
                <span
                    class="material-icons transition duration-300 group-hover:text-white dark:group-hover:text-black"
                    >dashboard</span
                >
                <h1
                    class="text-white overflow-hidden whitespace-nowrap max-w-0 opacity-0 group-hover:max-w-xs group-hover:opacity-100 transition-all duration-300 ml-2 group-hover:mr-2 dark:group-hover:text-black"
                >
                    Material
                </h1>
            </a>
        </div>

        <div class="flex gap-2 mr-2 justify-end">
            <div
                class="bg-transparent dark:hover:bg-white hover:bg-black group rounded-full p-1 hidden md:block"
            >
                <a href="https://github.com/kaykyOne" target="_blank">
                    <Image
                        src={logoGitHub}
                        alt="GitHub"
                        width={40}
                        class="cursor-pointer rounded-full group-hover:invert dark:invert dark:group-hover:filter-none transition duration-300 hover:shadow-xl"
                    />
                </a>
            </div>

            <div
                class="bg-transparent dark:hover:bg-white hover:bg-black group rounded-full p-1 hidden md:block"
            >
                <a href="https://linkedin.com/in/KaykyZioti" target="_blank">
                    <Image
                        src={logoLinkedin}
                        alt="LinkedIn"
                        width={40}
                        class="cursor-pointer rounded-full group-hover:invert dark:invert dark:group-hover:filter-none transition duration-300 hover:shadow-xl"
                    />
                </a>
            </div>
            <!-- From Uiverse.io by Javierrocadev -->
            <label
                class="relative inline-flex items-center cursor-pointer justify-between"
            >
                <input
                    type="checkbox"
                    id="checkboxThema"
                    onchange="toggleTheme()"
                    class="sr-only peer"
                />

                <div
                    class="hidden md:flex justify-between p-1 items-center group peer ring-0 rounded-full outline-none duration-300 after:duration-300 w-24 h-12 shadow-md peer-checked:bg-white peer-focus:outline-none
                    after:content-[''] after:rounded-full after:absolute after:bg-black dark:after:bg-gray-50 after:outline-none after:h-10 after:w-10 after:top-1 after:left-1
                    after:flex after:justify-center after:items-center peer-checked:after:translate-x-12 peer-hover:after:scale-95 border border-zinc-200 dark:border-zinc-700"
                >
                    <span class="material-icons ml-2">light_mode</span>

                    <span class="material-icons mr-2">dark_mode</span>
                </div>
                <div
                    class="flex md:hidden rounded-full p-2 bg-black dark:bg-white text-white dark:text-black justify-center items-center"
                >
                    <span class="material-icons">light_mode</span>
                </div>
            </label>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const checkbox = document.getElementById("checkboxThema");
            if (!checkbox) return;

            const theme = getTheme();
            checkbox.checked = theme;
        });
    </script>
</div>
