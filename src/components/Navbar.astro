---
import { Image } from "astro:assets";
import logoGitHub from "../assets/icons/github.svg";
import logoLinkedin from "../assets/iconLinkedin.png";

---
<div class="flex flex-col fixed z-50">
    <div class="w-screen p-3 flex justify-between items-center bg-white dark:bg-zinc-900 dark:text-white">
        <h1 class="font-bold text-2xl">KZ.</h1>
        <div class="flex gap-2">
        <a class="flex cursor-pointer group hover:bg-black dark:hover:bg-white p-2 rounded-md translate-x-2 hover:translate-x-0 transition duration-300" href="/f-portifolio/">
            <span class="material-icons transition duration-300 group-hover:text-white dark:group-hover:text-black">home</span>
            <h1 class="text-white overflow-hidden whitespace-nowrap max-w-0 opacity-0 group-hover:max-w-xs group-hover:opacity-100 transition-all duration-300 ml-2 group-hover:mr-2 dark:group-hover:text-black">Home</h1>
        </a>
        <a class="flex cursor-pointer group hover:bg-black p-2 rounded-md translate-x-2 hover:translate-x-0 transition duration-300 dark:hover:bg-white" href="/f-portifolio/sobre">
            <span class="material-icons transition duration-300 group-hover:text-white dark:group-hover:text-black">info</span>
            <h1 class="text-white overflow-hidden whitespace-nowrap max-w-0 opacity-0 group-hover:max-w-xs group-hover:opacity-100 transition-all duration-300 ml-2 group-hover:mr-2 dark:group-hover:text-black">Sobre</h1>
        </a>
        <a class="flex cursor-pointer group hover:bg-black p-2 rounded-md translate-x-2 hover:translate-x-0 transition duration-300 dark:hover:bg-white" href="/f-portifolio/material">
            <span class="material-icons transition duration-300 group-hover:text-white dark:group-hover:text-black">dashboard</span>
            <h1 class="text-white overflow-hidden whitespace-nowrap max-w-0 opacity-0 group-hover:max-w-xs group-hover:opacity-100 transition-all duration-300 ml-2 group-hover:mr-2 dark:group-hover:text-black">Material</h1>
        </a>
        </div>

        <div class="flex gap-2 mr-2">
            <div class="bg-transparent dark:hover:bg-white hover:bg-black group rounded-full p-1">
                <Image
                    src={logoGitHub}
                    alt="GitHub"
                    width={40}
                    class={"cursor-pointer rounded-full group-hover:invert dark:invert dark:group-hover:filter-none transition duration-300 hover:shadow-xl"}
                />
            </div>


            <div class="bg-transparent dark:hover:bg-white hover:bg-black group rounded-full p-1">
                <Image
                    src={logoLinkedin}
                    alt="GitHub"
                    width={40}
                    class={"cursor-pointer rounded-full group-hover:invert dark:invert dark:group-hover:filter-none transition duration-300 hover:shadow-xl"}
                />
            </div>

            <button onclick="toggleTheme()" class="flex justify-center items-center dark:bg-white bg-black text-white dark:text-black w-[100px] rounded-2xl p-2 gap-2 cursor-pointer">
                <h1>Tema</h1>
                <span class="material-icons">
                    light_mode
                </span>
            </button>
        </div>

    </div>
    
</div>




