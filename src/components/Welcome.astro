---
import ImagePersonalizado from "./ImagePersonalizado.astro";

const iconGitHub: string = "/assets/icons/github.svg";
const iconAstro: string = "/assets/iconAstro.png";
const iconTaw: string = "/assets/iconTailwind.png";
---

<div class="flex flex-col justify-center items-center min-h-[100vh] m-0 p-0 bg-white dark:bg-zinc-900 transition-colors duration-500">
  <div class="p-3">
    <h3 class="text-2xl text-center md:text-start w-full text-gray-700 dark:text-gray-300">
      Olá, eu sou <strong>Kayky</strong> e esse é
    </h3>
    <h1 class="font-semibold text-center text-6xl md:text-8xl text-gray-900 dark:text-white">
      Meu <strong>Portifólio</strong>
    </h1>
  </div>

  <a
    href="#contato"
    class="flex group bg-darkblue dark:bg-white dark:text-zinc-900 dark:hover:bg-zinc-400 p-2 rounded-md text-white min-w-[200px] text-center font-medium mt-5 cursor-pointer hover:bg-black transition duration-300 justify-center gap-3"
  >
    Contato
    <span class="material-icons">arrow_forward</span>
  </a>

  <div class="flex flex-col text-xl mt-10 gap-3 items-center text-gray-600 dark:text-gray-300 transition-colors duration-500">
    <h4>
      <strong>Site</strong> Desenvolvido com:
    </h4>
    <div class="flex gap-4">
      <div
        class="flex justify-center items-center bg-gray-300 dark:bg-zinc-700 p-2 rounded-full h-[50px] w-[50px] transition-colors duration-500"
      >
        <ImagePersonalizado src={iconGitHub} alt="GitHub" className={'dark:invert'} width={40} height={40} />
      </div>
      <div
        class="flex justify-center items-center bg-gray-300 dark:bg-zinc-700 p-2 rounded-full h-[50px] w-[50px] transition-colors duration-500"
      >
        <ImagePersonalizado src={iconAstro} alt="Astro" className={'dark:invert'} width={30} height={30} />
      </div>
      <div
        class="flex justify-center items-center bg-gray-300 dark:bg-zinc-700 p-2 rounded-full h-[50px] w-[50px] transition-colors duration-500"
      >
        <ImagePersonalizado src={iconTaw} alt="Tailwind" className={'dark:invert'} width={40} height={40} />
      </div>
    </div>
  </div>
</div>
