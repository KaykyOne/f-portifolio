<Layout>
    <GenericModel
        imgBack={"https://miro.medium.com/v2/resize:fit:1400/format:webp/1*ZfgRnUJwZyC0ceGWh_t5OQ.jpeg"}
        titulo={"Interação Humano-Computador"}
        subtitulo={"Crie experiências mais humanas e intuitivas!"}
        valores={valores}
        aprendizados={aprendizados}
        sobre={sobre}
        nomeProfessor={"Willian"}
